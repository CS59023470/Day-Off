<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        .layout_system{
            width: 90vw;
            height: 100vh;
            padding: 0px 5vw;
            position: fixed;
            top: 0px;
            left: 0px;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fff;
            flex-direction: column;
        }
        .textnormal{
            text-align: center;
            color: #858585;
            font-size: 6vw;
        }
        .text_error{
            text-align: center;
            color: #858585;
            font-size: 7vw;
        }
        .textnormal2{
            text-align: center;
            color: #858585;
            font-size: 7vw;
        }
        #countdown {
          font-size: 5vw;
          color: #858585;
        }
    </style>
  </head>
  <body>
      <div class="layout_system">
        <div class="icon">
          <img src="/images/alertgray.png" alt="images cancel gray">
        </div>
        <div><label class="textnormal">System</label><label class="text_error">ERROR</label><label class="textnormal2"> please try again!</label></div>
        <div id="countdown">5</div>
      </div>
  </body>
    <script 
        type='text/javascript'> 
        setTimeout(function(){  window.close() }, 5000)

        var seconds = document.getElementById("countdown").textContent;
        var countdown = setInterval(function() {
            seconds--;
        document.getElementById("countdown").textContent = seconds;
        if (seconds <= 0) clearInterval(countdown);
        }, 1000);
    </script>
</html>